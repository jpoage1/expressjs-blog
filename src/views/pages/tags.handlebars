{{!-- pages/tags.handlebars --}}

{{#section "styles"}}
<link rel="stylesheet" href="{{baseUrl}}/static/css/tags.css" />
{{/section}}

<section>
    <h1>Tags</h1>

    {{#if tags.length}}
    <ul class="tag-list">
        {{#each tags}}
        <li>
            <a href="/tags/{{slug}}">{{name}} ({{count}})</a>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <p>No tags found.</p>
    {{/if}}
</section>
