<header id="site-header">
  <div class="container">
    <div class="logo">
      <a href="/">{{siteOwner}}</a>
    </div>
    <button id="menuToggle" class="menu-toggle">â˜° Menu</button>
    <nav class="site-nav" id="siteNav">
      {{#each navLinks}}
      {{#if submenu}}
      <div class="dropdown">
        {{#if this.href}}
        <a href="{{this.href}}" class="dropbtn">{{this.label}}</a>
        {{else}}
        <a class="dropbtn">{{this.label}}</a>
        {{/if}}
        <div class="dropdown-content">
          {{#each submenu}}
          <a href="{{this.href}}">{{this.label}}</a>
          {{/each}}
        </div>
      </div>
      {{else}}
      <a href="{{this.href}}">{{this.label}}</a>
      {{/if}}
      {{/each}}
    </nav>
  </div>
</header>
{{#section "scripts"}}
<script src="/static/js/nav-toggle.js">
</script>
{{/section}}
