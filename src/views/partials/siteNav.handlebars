<button id="menuToggle" class="menu-toggle">â˜° Menu</button>
<nav class="site-nav" id="siteNav">
    {{#each navLinks}}
    {{#if submenu}}
    <div class="dropdown">
        {{#if this.href}}
        {{> navLink href=this.href label=this.label class="dropbtn"}}
        {{else}}
        <a class="dropbtn">{{this.label}}</a>
        {{/if}}
        <div class="dropdown-content">
            {{#each submenu}}
            {{> navLink}}
            {{/each}}
        </div>
    </div>
    {{else}}
    {{> navLink}}
    {{/if}}
    {{/each}}
</nav>
